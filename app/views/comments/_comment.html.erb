<div class="comment-card">
    <div class="card">
        <div class="card-block">
            <div class="row">
                <div class="col-md-1.5">
                    <%= gravatar_helper comment.user %>
                </div>
                <div class="col-md-11.5 CommentBody">
                    <div class="CommentUserInfo">
                        <i>Comment posted by <b><%= comment.user.name %></b> <%= distance_of_time_in_words(comment.created_at, Time.now) %> ago.</i>
                    </div>
                    <div>
                        <%= comment.content %>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</div>

